# HiCRM 环境变量配置模板
# 复制此文件为 .env 并填入实际值

# 应用配置
APP_NAME=HiCRM
VERSION=0.1.0
DEBUG=true
HOST=0.0.0.0
PORT=8000
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# 数据库配置
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/hicrm
DATABASE_URL_SYNC=postgresql://postgres:password@localhost:5432/hicrm

# Redis配置
REDIS_URL=redis://localhost:6379/0

# AI服务配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
DEFAULT_MODEL=gpt-3.5-turbo

# Qdrant向量数据库配置
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# 安全配置
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# 文件上传配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB

# 邮件配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_TLS=true

# 监控配置（可选）
PROMETHEUS_ENABLED=false
SENTRY_DSN=your_sentry_dsn_here

# 开发配置
RELOAD=true
WORKERS=1

# 测试配置
TEST_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/hicrm_test